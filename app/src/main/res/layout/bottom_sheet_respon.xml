<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottomSheetLayout"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    android:background="@android:color/background_light"
    android:padding="@dimen/activity_vertical_margin"
    app:behavior_hideable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior"
    >
        <TextView
            android:id="@+id/bottomSheetHeading"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Respon"
            android:textAppearance="@android:style/TextAppearance.Large" />

        <Spinner
            android:id="@+id/response_spinner"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bottomSheetHeading"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="13dp"
            style="@style/Base.Widget.AppCompat.Spinner.Underlined"
            android:layout_marginBottom="1.5dp"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:gravity="end"
            android:paddingLeft="0dp"
            android:paddingStart="0dp"
            android:paddingEnd="0dp"
            />

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_time_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/response_spinner"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/input_time_start"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waktu Mulai Pengerjaan"
                android:focusable="false"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_time_end"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout_time_start"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/input_time_end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Waktu Selesai Pengerjaan"
                android:focusable="false"/>

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_work_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout_time_end"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <EditText
                android:id="@+id/input_work_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jenis Pekerjaan" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/input_layout_nama_pelaksana"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/input_layout_work_type"
            app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">

            <AutoCompleteTextView
                android:id="@+id/autoCompleteTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:ems="10"
                android:hint="Nama Pelaksana">
                <requestFocus />
            </AutoCompleteTextView>

            <TextView
                android:id="@+id/selected_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/autoCompleteTextView"
                android:layout_marginTop="0dp"
                android:padding="0dp"/>
        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/button_bottom_sheet_respon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/input_layout_nama_pelaksana"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="2dp"
            android:text="@string/finish"
            android:textSize="14sp"
            android:background="@drawable/my_button_check"
            android:textColor="#FFFFFF"/>
</RelativeLayout>